<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TVMazeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/backgroundbgcolor</item>

    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">@drawable/btn_default</item>
    </style>

    <style name="editTextInput" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:height">50dp</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:fontFamily">@font/opensanssemibold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.TVMazeApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NormalText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_content_color</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:fontFamily">@font/opensansmedium</item>
    </style>

    <style name="TitleText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_content_color</item>
        <item name="android:textSize">@dimen/text_title_size</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:fontFamily">@font/opensanssemibold</item>
    </style>

    <style name="SummaryText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_content_color</item>
        <item name="android:textSize">@dimen/text_summary_size</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:fontFamily">@font/opensanslight</item>
    </style>

    <style name="Theme.TVMazeApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TVMazeApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>